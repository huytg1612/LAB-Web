<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoadController</servlet-name>
        <servlet-class>huytg.product.controllers.LoadController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuLoadController</servlet-name>
        <servlet-class>huytg.menu.controllers.LoadController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfoLoadController</servlet-name>
        <servlet-class>huytg.info.controllers.LoadController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleLoadController</servlet-name>
        <servlet-class>huytg.schedule.controllers.LoadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadController</servlet-name>
        <url-pattern>/LoadController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuLoadController</servlet-name>
        <url-pattern>/MenuLoadController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoLoadController</servlet-name>
        <url-pattern>/InfoLoadController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleLoadController</servlet-name>
        <url-pattern>/ScheduleLoadController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LoadController</welcome-file>
    </welcome-file-list>
</web-app>
